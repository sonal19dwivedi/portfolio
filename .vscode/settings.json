// Place your settings in this file to overwrite default and user settings.
{
    "jshint.enable": false,
    "sasslint.enable": true,
    "files.eol": "\n",
    "search.exclude": {
      "**/node_modules": true,
      "**/build": true,
      "**/release": true,
      "**/index.d.ts": true,
      "yarn.lock": true
    },
    "files.exclude": {
      "**/.git": true,
      // "**/node_modules": true,
      "**/.DS_Store": true,
      "**/*.js.map": true
    },
    "editor.rulers": [300],
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "TodoParser": {
      "folderExclude": ["node_modules", ".vscode", "build", "release"],
      "markers": ["NOTICE:", "INFO:", "HOTFIX:", "FIXME:"]
    },
    "todohighlight.keywords": [
      {
        "text": "NOTICE:",
        "color": "black",
        "backgroundColor": "yellow"
      },
      {
        "text": "INFO:",
        "color": "blue",
        "backgroundColor": "lightyellow"
      },
      {
        "text": "HOTFIX:",
        "color": "orange",
        "backgroundColor": "grey",
        "overviewRulerColor": "grey"
      }
    ]
  }
  